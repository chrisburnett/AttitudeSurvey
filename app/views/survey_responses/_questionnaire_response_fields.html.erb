<%= f.label :gender, "Please indicate your gender:" %>

<div class="form-group">
  <div class="radio-inline">
    <%= f.radio_button(:gender, "male") %>
    <%= f.label(:gender_male, "Male") %>
  </div>
  <div class="radio-inline">
    <%= f.radio_button(:gender, "female") %>
    <%= f.label(:gender_female, "Female") %>
  </div>
</div>

<%= f.label :age_range, "Please select a range which describes your age:" %>
<div class="form-group">

  <div class="radio-inline">
    <%= f.radio_button(:age_range, "18-30") %>
    <%= f.label(:age_range_a, "18-30") %>
  </div>
  <div class="radio-inline">
    <%= f.radio_button(:age_range, "31-50") %>
    <%= f.label(:age_range_b, "31-50") %>
  </div>
  <div class="radio-inline">
    <%= f.radio_button(:age_range, "51-70") %>
    <%= f.label(:age_range_c, "51-70") %>
  </div>
  <div class="radio-inline">
    <%= f.radio_button(:age_range, "71+") %>
    <%= f.label(:age_range_d, "71+") %>
  </div>
</div>

<%= f.label :employment_status, "What is your employment status:" %>
<div class="form-group">
  <div class="radio-inline"><%= f.radio_button(:employment_status, "retired") %>
    <%= f.label(:employment_status_a, "Retired") %></div>
  <div class="radio-inline"><%= f.radio_button(:employment_status, "unemployed") %>
    <%= f.label(:employment_status_b, "Unemployed") %></div>
  <div class="radio-inline"><%= f.radio_button(:employment_status, "student") %>
    <%= f.label(:employment_status_c, "Student") %></div>
  <div class="radio-inline"><%= f.radio_button(:employment_status, "full-time childcare") %>
    <%= f.label(:employment_status_d, "Full-time childcare") %></div>
  <div class="radio-inline"><%= f.radio_button(:employment_status, "full-time employment") %>
    <%= f.label(:employment_status_e, "Full-time employment") %></div>
  <div class="radio-inline"><%= f.radio_button(:employment_status, "part-time employment") %>
    <%= f.label(:employment_status_f, "Part-time employment") %></div>
  <div class="radio-inline"><%= f.radio_button(:employment_status, "other") %>
    <%= f.label(:employment_status_g, "Other") %></div>
</div>

<%= f.label :worked_in_healthcare, "Do you work, or have you ever worked, in a healthcare-related profession?" %>
<div class="form-group">
  <div class="radio-inline">
    <%= f.radio_button(:worked_in_healthcare, "true") %>
    <%= f.label(:worked_in_healthcare_yes, "Yes") %>
  </div>
  <div class="radio-inline">
    <%= f.radio_button(:worked_in_healthcare, "false") %>
    <%= f.label(:worked_in_healthcare_no, "No") %>
  </div>
</div>

<div class="form-group">
  <%= f.label :worked_in_healthcare_occupation, "If so, what is/was your role?" %>
  <%= f.text_field :worked_in_healthcare_occupation, class: "form-control", text: "Role" %>
</div>

<%= f.label :app_user, "Do you use healthcare-related applications on a mobile phone or similar device?" %>
<div class="form-group">

  <div class="radio-inline">
    <%= f.radio_button(:app_user, "true") %>
    <%= f.label(:app_user_yes, "Yes") %>
  </div>
  <div class="radio-inline">
    <%= f.radio_button(:app_user, "false") %>
    <%= f.label(:app_user_no, "No") %>
  </div>
</div>

<div class="form-group">
  <%= f.label :open_feedback, "If you have any additional feedback you'd like to provide, please enter it here:" %>
  <%= f.text_area :open_feedback, class: "form-control", rows: "3", text: "Additional feedback" %>
</div>
